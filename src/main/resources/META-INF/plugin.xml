<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>com.github.emotionbug.mermaid-live-editor</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Mermaid Live Editor</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/emotionbug" email="take-me-home@kakao.com">emotionbug
    </vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Live editor and previewer for Mermaid diagrams in IntelliJ IDEA.<br>
        Features:<br>
        <ul>
            <li>Real-time preview</li>
            <li>Zoom and Pan functionality</li>
            <li>Export to SVG and PPTX</li>
            <li>Local or CDN Mermaid.js support</li>
            <li>Syntax highlighting and error checking</li>
        </ul>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.platform.images</depends>
    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.emotionbug.mermaidliveeditor.MermaidSettingsState"/>

        <applicationConfigurable instance="com.github.emotionbug.mermaidliveeditor.MermaidSettingsConfigurable"
                                 id="com.github.emotionbug.mermaidliveeditor.MermaidSettingsConfigurable"
                                 displayName="Mermaid Live Editor"/>

        <fileType name="Mermaid File" implementationClass="com.github.emotionbug.mermaidliveeditor.MermaidFileType"
                  fieldName="INSTANCE" extensions="mermaid;mmd" language="Mermaid"/>

        <fileEditorProvider implementation="com.github.emotionbug.mermaidliveeditor.MermaidFileEditorProvider"/>

        <lang.parserDefinition language="Mermaid"
                               implementationClass="com.github.emotionbug.mermaidliveeditor.MermaidParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Mermaid"
                                       implementationClass="com.github.emotionbug.mermaidliveeditor.MermaidSyntaxHighlighterFactory"/>

        <colorSettingsPage implementation="com.github.emotionbug.mermaidliveeditor.MermaidColorSettingsPage"/>

        <annotator language="Mermaid" implementationClass="com.github.emotionbug.mermaidliveeditor.MermaidAnnotator"/>
    </extensions>
</idea-plugin>
